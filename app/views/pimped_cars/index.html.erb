<div class="container">
  <div class="row">
    <% @pimped_cars.each do |pimped_car| %>
      <div class="col-xs-12 col-sm-4">
        <%= link_to pimped_car_path(pimped_car), class: "card-link" do %>
          <div class="card-container">

            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path pimped_car.photo.path, crop: :fill  %>');">
              <div class="card-price">
                <h4><%= pimped_car.price_per_day%>$</h4>
              </div>
            </div>
          <!--  <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay"> -->
            <div class="card-footer">
              <div class="card-details">
                <div class="card-info">
                  <div class="card-name">
                    <h4><%= pimped_car.name %></h4>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    console.log('toto');
    $( ".card-container" ).hover(
      function() {
        console.log('toto is good');
        $(this).find('.card-footer').addClass('card-footer-shown');
      }, function() {
        console.log('toto is not good');
        $(this).find('.card-footer').removeClass('card-footer-shown');
      }
    );

  <% end %>
<% end %>
