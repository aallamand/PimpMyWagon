<%= simple_form_for [@pimped_car, @booking] do |f| %>
  <%= f.input :starts_at, as: :date, html5: true, label: "Start Date", placeholder: "25/08/2017" %>
  <%= f.input :ends_at, as: :date, html5: true, label: "End Date", placeholder: "27/08/2017" %>
  <%= f.label "Price per Day: #{@pimped_car.price_per_day} $" %>
  <%= f.submit "Book it", class: "btn btn-danger" %>
<% end %>
