<%= simple_form_for [@pimped_car, @booking] do |f| %>
  <%= f.input :starts_at, as: :string, html5: true, label: "Start Date", placeholder: "25/08/2017", input_html: {class: 'datepicker'} %>
  <%= f.input :ends_at, as: :string, html5: true, label: "End Date", placeholder: "27/08/2017", input_html: { class: 'datepicker'} %>
  <%= f.label "Price per Day: #{@pimped_car.price_per_day} $" %>
  <%= f.submit "Book it", class: "btn btn-danger" %>
<% end %>

<% content_for(:after_js) do %>
  <script>
      $(".datepicker").datepicker({
    format: 'mm/dd/yyyy',
    startDate: '-1d'
});
  </script>
<% end %>
