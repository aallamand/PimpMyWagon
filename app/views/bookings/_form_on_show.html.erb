<%= simple_form_for [@pimpedcar, @booking] do |f| %>
  <%= f.input :starts_at, as: :date, html5: true, label: "Start Date" %>
  <%= f.input :ends_at, as: :date, html5: true, label: "End Date" %>
  <%= f.label "Price per Day: #{@pimpedcar.price_per_day} $" %>
  <%= f.label "Total Price: TODO" %>
  <%= f.submit "submit", class: "btn btn-danger" %>
<% end %>
