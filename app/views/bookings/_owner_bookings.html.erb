
    <!-- Store each bookings relative to a car -->
    <% bookings = @car.bookings %>
    <!-- Iterate on bookings to display each booking for a car -->
    <% bookings.each do |booking| %>
      <div class="message">
        <img class="avatar-large" src="<%= renter(booking).facebook_picture_url %>">
        <div class="message-name">
          <p><strong>From: </strong><%= booking.starts_at.strftime("%m/%d/%Y") %> </p>
        </div>
        <div class="message-name">
          <p><strong>To: </strong><%= booking.ends_at.strftime("%m/%d/%Y") %></p>
        </div>
        <div class="message-body">
          <div class="message-details">
             <p><strong>Renter:</strong> <%= renter(booking).first_name %></p>
          </div>
            <div>
              <p><strong>Rented car:</strong> <%= link_to @car.name, pimped_car_path(booking.pimped_car_id) %></p>
          </div>
        </div>

          <div class="message-status">
            <p class="status pending"><%= link_to booking.status, edit_booking_path(booking) %></p>
            <p class="price">$ <%= total(booking) %></p>
          </div>
      </div>
    <% end %>



